<%# new %>
<main class="form-signin w-100 m-auto">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
    <div class="form-floating">
      <%= f.email_field :email, class: "form-control", id: "floatingInput", placeholder: "name@example.com", autofocus: true, autocomplete: "email" %>
      <label for="floatingInput">Email address</label>
    </div>
    <div class="form-floating">
      <%= f.password_field :password, class: "form-control", id: "floatingPassword", placeholder: "Password", autocomplete: "current-password" %>
      <label for="floatingPassword">Password</label>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="form-check text-start my-3">
        <%= f.check_box :remember_me, class: "form-check-input", id: "flexCheckDefault", value: "remember-me" %>
        <%= f.label :remember_me, class: "form-check-label", for: "flexCheckDefault" do %>
          Remember me
        <% end %>
      </div>
    <% end %>
    <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
  <% end %>
  <%= render "devise/shared/links" %>
</main>
