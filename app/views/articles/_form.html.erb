<div class="col-md-12">
  <%= form_with model: @article, data: { turbo: false} do |f| %>
    <% if @article.errors.any? %>
      <div class="alert alert-warning d-flex align-items-center justify-content-center" id="error_explanation" role="alert">
        <h5><%= pluralize(@article.errors.count, "error") %> prohibited this Message from being submited:</h5>
        <ul>
          <% @article.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="col-md-12">
      <div class="col-md-12 mb-3">
        <%= f.hidden_field :author, class: "form-control", placeholder: "Author", value: current_user.username %>
      </div>
      <div class="col-md-12 mb-3">
        <%= f.label :title, class: "form-label" %>
        <%= f.text_field :title, class: "form-control", placeholder: "Enter Title" %>
      </div>
      <div class="mb-3">
        <%= f.label :text, class: "form-label" %>
        <%= f.text_area :text, class: "form-control", rows: 5 %>
      </div>
      <%= f.submit class: "btn btn-primary mb-4" %>
    <% end %>
  </div>
</div>
